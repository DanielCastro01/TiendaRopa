@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>
    <link href="~/Content/Login.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <h2 class="login-title">Iniciar Sesion</h2>
            <form action="@Url.Action("Index","Acceso")" method="post">
                <div class="input-group">
                    <label for="email">Correo</label>
                    <input type="email" id="correo" name="correo" required />
                </div>
                <div class="input-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="clave" name="clave" required />
                </div>
                @{
                    if (ViewBag.Error != null)
                    {
                        <div class="input-error">
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.Error
                            </div>
                        </div>
                    }
                }
                <div class="options">
                    <a href="@Url.Action("CambiarClave","Acceso")">¿Olvidaste tu contraseña?</a>
                </div>
                <button type="submit" class="btn-login">Ingresar</button>
            </form>
            <p class="signup-text">¿No tienes cuenta? <a href="#">Regístrate</a></p>
        </div>
    </div>

    <script src="~/Scripts/bootstrap.bundle.js"></script>
</body>
</html>